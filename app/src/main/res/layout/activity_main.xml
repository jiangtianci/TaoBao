<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/frament"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/radioGrop"
        >

    </FrameLayout>

    <RadioGroup
        android:id="@+id/radioGrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <RadioButton
            android:id="@+id/main_shouye"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/shouyes"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:text="首页"
            android:checked="true"
            android:textColor="@drawable/bottom_font_selector" />

        <RadioButton
            android:id="@+id/main_weitao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/fenleis"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:text="分类"
            android:textColor="@drawable/bottom_font_selector" />

        <RadioButton
            android:id="@+id/main_xinxi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/xinxis"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:text="消息"
            android:textColor="@drawable/bottom_font_selector" />

        <RadioButton
            android:id="@+id/main_gouwuche"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/gouwuches"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:text="购物车"
            android:textColor="@drawable/bottom_font_selector" />
        <RadioButton
            android:id="@+id/main_wodetaobao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/wodetaobaos"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:text="我的淘宝"
            android:textColor="@drawable/bottom_font_selector" />
    </RadioGroup>

</RelativeLayout>
