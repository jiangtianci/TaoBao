<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<ImageView
    android:id="@+id/sy_img"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@mipmap/ic_launcher"
    />
<TextView
    android:id="@+id/sy_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="飒飒的S的"
    android:textSize="20sp"
    android:maxLines="2"
    android:ellipsize="end"
    android:layout_below="@+id/sy_img"
    />
    <TextView
        android:id="@+id/sy_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥126"
        android:textColor="#f00"
        android:textSize="18sp"
        android:layout_below="@+id/sy_title"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/sy_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2624人付款"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:layout_below="@+id/sy_title"
        android:layout_toRightOf="@+id/sy_price"
        />











</RelativeLayout>